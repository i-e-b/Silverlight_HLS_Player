<UserControl x:Class="HlsPlayer.ClickAnywhereSlider"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
     Height="103"
    MouseMove="ClickAnywhereSlider_MouseMove" MouseWheel="ClickAnywhereSlider_MouseWheel"
    MouseLeftButtonDown="ClickAnywhereSlider_MouseLeftButtonDown" MouseLeftButtonUp="ClickAnywhereSlider_MouseLeftButtonUp">

    <Grid x:Name="LayoutRoot" Background="White" HorizontalAlignment="Stretch" Margin="0,0,0,0">
        <Rectangle x:Name="SelectionBar" Fill="#FFC2CBDE"/>
        <Rectangle x:Name="Thumb" Stroke="Black" StrokeThickness="0" HorizontalAlignment="Left"  Margin="102,0,120,0">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF2035C7" Offset="0.487"/>
                    <GradientStop Color="#FF9EC1FE"/>
                    <GradientStop Color="#FF29305B" Offset="0.5"/>
                    <GradientStop Color="#FF2977FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
